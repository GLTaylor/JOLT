<div class="nde-banner" style="background-image: url(<%= cl_image_path @nde.photo %>)">
  <div class="nde-banner-content">
    <h1> <%= @nde.name %> </h1>
  </div>
</div>

<div class="card-body">
  <div class="col-xs-12 col-sm-12 md-sm-12">
    <div>
      <h2> Experience: <%= @nde.name %> </h2>
      <p> <%= @nde.description %> </p>
    </div>
  </div>

 <div class="card-price">
    <h4 style= "text-align: center"> Details </h4>
      <ul>
        <li> <%= @nde.price %> euros</li>
        <li> <%= @nde.location %> </li>
        <li> <%= @nde.city %> </li>
      </ul>
      <div style= "text-align: center"><%= link_to "Book", new_nde_booking_path(@nde.id), class: "btn btn-danger" %></div>
  </div>

</div>
  <div class="card-reviews">
    <h3> Reviews Below </h3>
    <div class="card-review">
      <% if @nde.reviews.present? %>
        <% @nde.reviews.each do |review| %>
          <h4> <%= review.title %> </h4> <br>
          <p>
            <%= review.body %> --
            <em>
              <% if review.user.name.present? %>
                <%= review.user.name %>
              <% else %>
                <%= review.user.email %>
              <% end %>
            </em>
          </p>
          <div class="card-review-rating">
            <% review.rating.times do %>
              <i class="fas fa-skull skull-red"></i>
            <% end %>
          </div>
        <% end %>

      <% else %>
        <p> No review for this experience yet </p>
      <% end %>
    </div>
  </div>





