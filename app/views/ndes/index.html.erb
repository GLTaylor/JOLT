<div class="banner text-center">
  <div class="banner-content">
    <h1>Rent a near death experience</h1>
    <h3>Jolt yourself into the life you really want</h3>
  </div>
</div>

<div class="wrapper-white">
  <div class="container">
    <h3 class="text-center home-title">Choose your Near Death Experience</h3>
    <div class="row">
      <% @ndes.each do |nde| %>
      <div class="col-xs-12 col-sm-4 col-lg-3">
        <%= link_to nde_path(nde) , class: "card-link" do %>
        <div class="card-nde card-nde-background" style="background-image: linear-gradient(135deg, rgba(0, 0, 0, 0.5) 12%,rgba(0,0,0,0.4) 36%,rgba(0,0,0,0.1) 58%,rgba(0,0,0,0) 100%), url('<%= cl_image_path nde.photo %>'); background-position: center;
        background-size: cover;">
        <h4 class="card-title"><%= nde.name %></h4>
        <div class="card-nde-info">
          <ul class="list-inline">
            <li>
              <%= nde.price %><i class="fas fa-euro-sign"></i>
            </li>
            <li>
              <%= nde.participant_number %><i class="fas fa-user"></i>
            </li>
            <li>
              <%= nde.drama %><i class="fas fa-skull"></i>
            </li>
          </ul>
        </div>
      </div>
      <% end %>
    </div>

    <% end %>
  </div>
</div>
</div>
