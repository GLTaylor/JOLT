<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="card-form row">
        <h2> Facilitate an Experience, Change a Life </h2>
        <%= simple_form_for(@nde) do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :city %>
          <%= f.input :participant_number %>
          <%= f.input :location %>
          <%= f.input :drama %>
          <%= f.input :price %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Add Experience" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

