<%= simple_form_for([ nde, review ], remote: true) do |f| %>
    <%= f.input :title, :input_html => {:style=> 'width: 700px'}  %>
    <%= f.input :body, :input_html => {:style=> 'width: 700px'} %>
    <%= f.input :rating, collection: 1..5, :input_html => {:style=> 'width: 60px'}%>
    <%= f.submit "Add Your Review", class: "btn btn-danger" %>
  <% end %>
