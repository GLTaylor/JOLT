<div class="edit-body">
  <div class="container">
    <h2> Edit your details </h2>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="card-form">
          <%= simple_form_for @user do |f| %>
          <%= f.input :name %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Update!" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
